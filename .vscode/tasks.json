{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Get callable objects from current file",
            "type": "process",
            "command": "${config:python.pythonPath}",
            "args": [
                "${workspaceFolder}\\dlpt\\printFileCallables.py",
                "${file}"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
            }
        },
        {
            "label": "Build distribution",
            "type": "process",
            "command": "${config:python.pythonPath}",
            "args": [
                "setup.py",
                "sdist",
                "bdist_wheel"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
            }
        },
        {
            "label": "Upload distribution",
            "type": "process",
            "command": "${config:python.pythonPath}",
            "args": [
                "-m",
                "twine",
                "upload",
                "dist/*"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
            }
        }
    ]
}